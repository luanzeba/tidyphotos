{
  "name": "tidyphotos",
  "version": "0.1.0",
  "description": "Self-hosted photo management application - Apple Photos alternative",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc",
    "build:backend": "go build -o tidyphotos-server cmd/server/main.go",
    "watch:frontend": "tsc --watch",
    "dev": "npm run build:frontend && go run cmd/server/main.go",
    "start": "./tidyphotos-server",
    "start:dev": "go run cmd/server/main.go",
    "regen-thumbs": "go run cmd/regen-thumbs/main.go",
    "test": "vitest",
    "test:unit": "vitest --exclude tests/integration/",
    "test:integration": "vitest tests/integration/",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "photo-management",
    "self-hosted",
    "zig",
    "alpine-js",
    "typescript"
  ],
  "author": "Luan Vieira <luanv@me.com>",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "@vladmandic/face-api": "^1.7.15",
    "canvas": "^3.2.0"
  }
}
