{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./public/js/dist",
    "rootDir": "./src/frontend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/frontend/**/*"
  ],
  "exclude": [
    "node_modules",
    "public/js/dist"
  ]
}